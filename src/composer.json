{
    "name": "sourcebricks/easyhire",
    "type": "project",
    "description": "HR pipeline",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "beberlei/assert": "^3.2"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "phpspec/phpspec": "^5.1",
        "phpstan/phpstan": "^0.11.2",
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SB\\EasyHire\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "prefer-stable": true
}
